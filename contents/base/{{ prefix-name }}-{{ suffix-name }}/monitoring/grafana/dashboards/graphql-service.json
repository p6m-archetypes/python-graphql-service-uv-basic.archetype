{
  "title": "{{ prefix-name }}-{{ suffix-name }} GraphQL Service",
  "tags": ["graphql", "strawberry", "python"],
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "title": "GraphQL Request Rate by Operation",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(graphql_requests_total{status=\"success\"}[5m])",
          "legendFormat": "{{operation_type}}: {{operation_name}}"
        }
      ]
    },
    {
      "title": "GraphQL Response Time Percentiles",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(graphql_request_duration_seconds_bucket[5m]))",
          "legendFormat": "95th percentile"
        },
        {
          "expr": "histogram_quantile(0.50, rate(graphql_request_duration_seconds_bucket[5m]))", 
          "legendFormat": "50th percentile"
        },
        {
          "expr": "histogram_quantile(0.90, rate(graphql_request_duration_seconds_bucket[5m]))",
          "legendFormat": "90th percentile"
        }
      ]
    },
    {
      "title": "GraphQL Error Rate",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "rate(graphql_errors_total[5m])",
          "legendFormat": "{{error_type}} - {{operation_name}}"
        },
        {
          "expr": "rate(graphql_requests_total{status=\"error\"}[5m])",
          "legendFormat": "Total Errors"
        }
      ]
    },
    {
      "title": "Active GraphQL Subscriptions",
      "type": "singlestat",
      "gridPos": {"h": 8, "w": 6, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "graphql_active_subscriptions",
          "legendFormat": "Active Subscriptions"
        }
      ]
    },
    {
      "title": "GraphQL Request Status Distribution",
      "type": "piechart",
      "gridPos": {"h": 8, "w": 6, "x": 18, "y": 8},
      "targets": [
        {
          "expr": "sum by (status) (rate(graphql_requests_total[5m]))",
          "legendFormat": "{{status}}"
        }
      ]
    },
    {
      "title": "Top 10 Slowest Operations",
      "type": "table",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "topk(10, avg by (operation_name, operation_type) (rate(graphql_request_duration_seconds_sum[5m]) / rate(graphql_request_duration_seconds_count[5m])))",
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "operation_name": "Operation",
              "operation_type": "Type",
              "Value": "Avg Duration (s)"
            }
          }
        }
      ]
    },
    {
      "title": "Database Connection Pool",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "database_connections_active",
          "legendFormat": "Active connections"
        },
        {
          "expr": "database_connections_idle", 
          "legendFormat": "Idle connections"
        }
      ]
    },
    {
      "title": "GraphQL Operations by Type",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
      "targets": [
        {
          "expr": "sum by (operation_type) (rate(graphql_requests_total{status=\"success\"}[5m]))",
          "legendFormat": "{{operation_type}}"
        }
      ]
    },
    {
      "title": "Memory and CPU Usage",
      "type": "graph", 
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
      "targets": [
        {
          "expr": "process_resident_memory_bytes",
          "legendFormat": "Memory Usage"
        },
        {
          "expr": "rate(process_cpu_seconds_total[5m])",
          "legendFormat": "CPU Usage"
        }
      ]
    }
  ]
} 